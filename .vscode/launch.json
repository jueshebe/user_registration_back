    "version": "0.2.0",
    "configurations": [
     {
      "type": "python",
      "request": "launch",
      "name": "Launch main file",
      "program": "${workspaceFolder}/app",
      "console": "integratedTerminal",
      "justMyCode": true
     },
     {
      "type": "python",
      "request": "attach",
      "name": "docker deb",
      "host": "127.0.0.1",
      "port": "5676",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}", 
          "remoteRoot": "/app"
        }
      ],
      "console": "integratedTerminal",
      "redirectOutput": true,
      "runInTerminal": true
     }
    ]
}
